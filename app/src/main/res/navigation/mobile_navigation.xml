<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapplication.HomeFragment"
        android:label="Колесо жизненного баланса"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_koleso"
        android:name="com.example.myapplication.AddKolesoFragment"
        android:label="Обновить колесо"
        tools:layout="@layout/fragment_add_koleso" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.myapplication.ToDoListFragment"
        android:label="Список задач"
        tools:layout="@layout/fragment_todolist" />

    <fragment
        android:id="@+id/navigation_addlist"
        android:name="com.example.myapplication.ToDoListFragment"
        android:label="Добавить задачу"
        tools:layout="@layout/fragment_add_list" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.myapplication.ChatFragment"
        android:label="Чат"
        tools:layout="@layout/fragment_chat" />
</navigation>